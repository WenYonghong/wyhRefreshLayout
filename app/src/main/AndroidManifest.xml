<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wyh.sample">

    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/RXBTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SimpleActivity" />
        <activity android:name=".FrameLayoutActivity" />
        <activity android:name=".ScrollViewActivity" />
        <activity android:name=".AutoRefreshActivity" />
        <activity android:name=".RecyclerViewActivity" />
        <activity android:name=".MaterialActivity" />
        <activity android:name=".EmptyActivity" />
        <activity android:name=".BelowActivity" />
        <activity android:name=".CustomHeadViewActivity" />
        <activity android:name=".CustomFootViewActivity" />
        <activity android:name=".WebViewActivity" />
        <activity android:name=".ListViewActivity" />
    </application>

</manifest>